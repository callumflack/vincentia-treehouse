header#home
    .CoverImage-position("data-0"="opacity:1", "data-500"="opacity:0")
        .CoverImage--header.FlexEmbed.FlexEmbed--ratio
    .headline-position("data-0"="opacity:1", "data-500"="opacity:0")
        .headline
            .container
                h1.title(style='white-space:pre;')
                    | Treehouse
                    | at Vincentia
                .rule
                h2.subtitle A retreat in Jervis Bay, New South Wales.
                p
                    a.Button.Button--contact(href='http://www.stayz.com.au/98466') Bookings

nav("data-0"="border-bottom:1px solid rgba(85,85,85,1)", "data-500"="border-bottom:1px solid rgba(85,85,85,0)")
    div(data-magellan-expedition='fixed')
        .container
            dl.sub-nav
                dd
                    a(href='##home|500') Home
                dd(data-magellan-arrival='about')
                    a(href='##about|500') About
                dd(data-magellan-arrival='location')
                    a(href='##location|500') Location
                dd(data-magellan-arrival='pictures')
                    a(href='##pictures|500') Pictures
                dd(data-magellan-arrival='thingstodo')
                    a(href='##thingstodo|500') Nearby
                dd(data-magellan-arrival='inside')
                    a(href='##inside|500') Inside
                dd(data-magellan-arrival='bookings')
                    a(href='##bookings|500', "data-0"="color:rgb(170,170,170)", "data-500"="color:rgb(43,166,203)") Bookings

section("data-0"="background:rgb(50,57,64)", "data-400"="background:rgb(245,245,245)")
    article.hide-mobile#scroll-arrow("data-0"="opacity:1", "data-300"="opacity:0")
        a(href='##scroll-start|300')
            h3 Scroll
            img(src='/images/scroll-arrow.png')

    .container#scroll-start("data-200"="opacity:0", "data-400"="opacity:1")

        article#about(data-magellan-destination='about')
            != partial("_about")

        article#location(data-magellan-destination='location')
            .row
                .large-4.column
                    h3 Location
                .large-8.column
                    p
                        | Just 2.5 hours south of Sydney, Jervis Bay boasts the whitest sand in Australia. It has many sanctuary sites, beach reserves and national parks.
                    p.map
                        iframe(frameborder='0', height='460', src='https://mapsengine.google.com/map/embed?mid=z-R5RJp1Q6EU.kTG6PN_cTcNA', width='100%')

        article#pictures(data-magellan-destination='pictures')
            != partial("_pictures")

        article#thingstodo(data-magellan-destination='thingstodo')
            != partial("_nearby")

        article#inside(data-magellan-destination='inside')
            != partial("_inside")

        article#bookings(data-magellan-destination='bookings')
            .row
                .large-4.column
                    h3 Bookings
                .large-8.column
                    :markdown
                        Our bookings are managed with
                        [Stayz.](href='http://www.stayz.com.au/98466')
                        Got questions? Get in touch by emailing
                        [Angel](href='mailto:angel@artechne.com.au')
                        or
                        [Iona](href='mailto:angel@artechne.com.au').

                    p.buttonholder
                        a.Button.Button--contact.Button--highlight(href='http://www.stayz.com.au/98466') Click to Book

